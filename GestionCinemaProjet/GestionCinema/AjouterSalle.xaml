<Window x:Class="GestionCinema.AjouterSalle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajouter Une Salle" Height="210" Width="300" Style="{StaticResource Windows}"
        WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Text="Numero de Salle" Style="{StaticResource StyleTextFenetre}"/>
            <TextBox Name="Numero" Style="{StaticResource StyleTextBox}"/>
            <TextBlock Text="Capacite" Style="{StaticResource StyleTextFenetre}"/>
            <TextBox Name="Capacite" Style="{StaticResource StyleTextBox}"/>
        </StackPanel>
        <WrapPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Style="{StaticResource StyleBoutons}" Content="Annuler" Click="fermer" />
            <Button Style="{StaticResource StyleBoutons}" Content="Ajouter" Click="valider" />
        </WrapPanel>
    </DockPanel>
</Window>
